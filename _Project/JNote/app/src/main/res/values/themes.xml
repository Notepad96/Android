<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/firstColor</item>
        <item name="colorPrimaryVariant">@color/firstColorVariant</item>
        <item name="colorOnPrimary">@color/firstOnColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/darkFirstColorVariant</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>

        <item name="mainBtnLayout">@drawable/border_top</item>
        <item name="mainBtn">@style/mainBtn</item>
        <item name="themeToggle">@drawable/ic_baseline_nights_stay_24</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_menu_24</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkFirstColor</item>
        <item name="colorPrimaryVariant">@color/darkFirstColorVariant</item>
        <item name="colorOnPrimary">@color/darkFirstOnColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darkFirstColorVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/darkFirstColor</item>

        <item name="android:textColorPrimary">@color/darkFirstOnColor</item>
        <item name="android:textColorSecondary">@color/darkFirstOnColor</item>
        <item name="android:textColor">@color/darkFirstOnColor</item>

        <item name="mainBtnLayout">@drawable/border_top_background</item>
        <item name="mainBtn">@style/darkMainBtn</item>
        <item name="themeToggle">@drawable/ic_baseline_wb_sunny_24</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_menu_24_2</item>
    </style>

</resources>