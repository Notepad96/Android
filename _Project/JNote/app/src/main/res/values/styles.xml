<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainBtn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/firstColorVariant</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="darkMainBtn" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:backgroundTint">@color/darkFirstColorVariant</item>
        <item name="android:textColor">@color/darkFirstOnColor</item>
    </style>


    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="buttonBarPositiveButtonStyle">@style/positiveBtn</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_width</item>
    </style>

    <style name="AlertDialog2" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="buttonBarPositiveButtonStyle">@style/positiveBtn</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeBtn</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_width</item>
    </style>

    <style name="positiveBtn" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="negativeBtn" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>
    <item name="dialog_width" type="dimen">90%</item>


    <style name="lightTheme" parent="AppTheme"/>
    <style name="darkTheme" parent="AppDarkTheme"/>


</resources>