<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MusicDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music Player"
        android:layout_marginBottom="20dp"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/imgMusic"
        android:layout_width="300dp"
        android:layout_height="300dp"
        />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginVertical="10dp"
        android:text="Title"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:longClickable="true"
        android:progress="0"
        android:progressDrawable="@drawable/seekbar_skin"
        android:thumb="@drawable/seekbar_tumb" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnRewind"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sharp_skip_previous_24"
            android:background="@drawable/btn_bg"
            />
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_baseline_play_circle_vector"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/btn_bg"
            />
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_skip_next_24"
            android:background="@drawable/btn_bg"
            />
    </LinearLayout>

</LinearLayout>